{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1>Store
            <small>info</small>
        </h1>
    </div>
    <H1>{{ store.name }}</H1>
    <p>All URLs in this store should start with <strong> : {{ store.url_prefix }}</strong></p>
    <p>Store Item Tag name :<strong>{{ store.tag_name }}</strong></p>
    <p>Store Item Search Query :<strong>{{ store.query }}</strong></p>

    {% if session['email'] in config.ADMINS %}
        <div class="panel panel-default">
            <div class="panel-body">
                <a class="btn btn-warning" href="{{ url_for('stores.edit_store', store_id=store._id) }}" role="button">Edit
                    Store</a>
                <a class="btn btn-danger" href="{{ url_for('stores.delete_store', store_id=store._id) }}" role="button">Permanently
                    Delete Store</a>
            </div>
        </div>
    {% endif %}
{% endblock %}